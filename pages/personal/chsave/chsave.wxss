  height: 97rpx;
  width: 710rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.or_jie text{
   text-align: center;
  line-height: 97rpx;
  display: block;
}
.or_jie text:first-child{
  float: left;
   font-size: 34rpx;
  color: #999;
}
.or_jie text:last-child{
  float: right;
  color: #ff9b2c;
  font-size: 34rpx;
}
.card_msg{
  width: 750rpx;
