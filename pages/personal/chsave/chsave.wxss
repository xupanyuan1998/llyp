  height: 231rpx;
  background: #fff;
}
.order_i{
  width: 710rpx;
  height: 135rpx;
  padding: 0 20rpx;
}
.order_i .ormsg{
  display: block;
  float: left;
  height: 135rpx;
  line-height: 135rpx;
  font-size: 34rpx;
  color: #999;
}
