radio .wx-radio-input.wx-radio-input-checked{
   border: none;
     width: 32rpx;
  height: 31rpx;
    border-radius: 50%;/* 圆角 */
   background: red;
}
.oksave{
  margin: 200rpx auto 0 auto;
  height: 96rpx;
  display: block;
  width:710rpx;
  border-radius: 7rpx;
  line-height: 96rpx;
  text-align: center; 
  font-size: 36rpx;
  color: #fff;
  background: #ff9b2c;
}