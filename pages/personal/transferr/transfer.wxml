<!--pages/personal/transferr/transfer.wxml-->
<view class='head'>
  <image src='/images/caiwu_b.png'></image>
  <view class='yue'>
    <text>{{yue}}</text>
    <text>当前余额</text>
  </view>
  <view class='jilu' bindtap='jilu'>
      <image src='/images/jilu.png'></image>
      <text>记录</text>
  </view>
</view>
<form class='addcard' bindsubmit='zhuan'>
  <view>
    <text>手机号</text>
     <input placeholder='请输入对方手机号' placeholder-class='place' value='{{info}}' type="number" name="zhanghao"/>
  </view>
  <view>
    <text>金额</text>
     <input placeholder='请输入转账金额' placeholder-class='place' value='{{info}}' type="digit" name="money"/>
  </view>
  <view>
    <text>密码</text>
     <input placeholder='请输入二级密码' placeholder-class='place' value='{{info}}' type="password" name="password"/>
  </view>
  <button form-type="submit">确认</button>
</form>
