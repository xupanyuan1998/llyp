<!--pages/personal/newaddress/newaddress.wxml-->
<form>
  <view>
    <text>收货人</text>
    <input placeholder='请输入收货人姓名' placeholder-class='pal'/>
  </view>
   <view>
    <text>手机号</text>
    <input placeholder='请输入收货人手机号' placeholder-class='pal'/>
  </view>
  <view>
    <text>选择省</text>
    <text class='choose'>请选择省份</text>
    <image src='/images/choose.png'></image>
  </view>
  <view>
    <text>选择市</text>
    <text class='choose'>请选择市</text>
    <image src='/images/choose.png'></image>
  </view>
  <view>
    <text>选择区</text>
    <text class='choose'>请选择区</text>
    <image src='/images/choose.png'></image>
  </view>
  <textarea name="dress" placeholder='请输入您的详情地址：如道路、门牌号、小区名、楼栋号单元等' value=''></textarea>
  <button form-type='submit'>保存</button>
</form>
