<!--pages/personal/newaddress/newaddress.wxml-->
<form>
  <view>
    <text>收货人</text>
    <input placeholder='请输入收货人姓名' placeholder-class='pal' />
  </view>
  <view>
    <text>手机号</text>
    <input placeholder='请输入收货人手机号' placeholder-class='pal' />
  </view>
  <view bindtap='sheng'>
    <text>选择省</text>
    <text class='choose'>请选择省份</text>
    <image src='/images/choose.png'></image>
  </view>
  <view>
    <text>选择市</text>
    <text class='choose'>请选择市</text>
    <image src='/images/choose.png'></image>
  </view>
  <view>
    <text>选择区</text>
    <text class='choose'>请选择区</text>
    <image src='/images/choose.png'></image>
  </view>
  <textarea name="dress" placeholder='请输入您的详情地址：如道路、门牌号、小区名、楼栋号单元等' value=''></textarea>
  <button form-type='submit'>保存</button>
</form>
<view class='citys' style="display:{{show}}">
  <picker-view bindchange="bindChange" style='height:40%' class='cityBody'>
    <view class='save'>
      <text bindtap='cancle'>取消</text>
      <text>确定</text>
    </view>
    <picker-view-column>
      <view wx:for="{{provice}}" wx:key="item" style="width: 100%;text-align: center;line-height: 100rpx;height: 100rpx;">{{item.province_name}}</view>
    </picker-view-column>
  </picker-view>
</view>