/* pages/list_int/list_int.wxss */

.nav {
  height: 60rpx;
  width: 710rpx;
  padding: 15rpx 20rpx;
  background: #fff;
}
.left {
  width: 632rpx;
  height: 59rpx;
  background: #edeff1;
  float: left;
}

.left image {
  width: 30rpx;
  height: 29rpx;
  margin: 15rpx 10rpx 15rpx 160rpx;
  display: block;
  float: left;
}
::-webkit-scrollbar{

width: 0;

height: 0;

color: transparent;

}
.left input {
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #7c7f80;
  display: block;
  float: left;
}

.right {
  float: right;
  width: 70rpx;
  height: 60rpx;
}

.right view {
  margin-top: 9rpx;
  float: right;
  width: 42rpx;
  height: 42rpx;
  position: relative;
}

.right image {
  width: 42rpx;
  height: 42rpx;
}

.right text {
  width: 25rpx;
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  border-radius: 50%;
  background: #ff9b2c;
  color: #fff;
  font-family: "DIN";
  font-size: 20rpx;
  position: absolute;
  top: -7rpx;
  right: -7rpx;
}
.warp{
  background: #fff;
  width: 750rpx;
  height: 1000rpx;
}
.content{
  width: 750rpx;
  height: 196rpx;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #eaeaea;
}
.content image{
  display: block;
  float: left;
  width: 196rpx;
  height: 196rpx;
  margin: 0 15rpx 0 20rpx;
}
.content .top{
  float: left;
  width: 478rpx;
  max-height: 120rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.content .top text{
  display: block;
  width: 478rpx;
  height: auto;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333333;
  font-family: "苹方 中等";
}
.content .shop_name{
  display: block;
  float: left;
  width: 478rpx;
  height: 40rpx;
  line-height: 40rpx;
   font-size: 32rpx;
  color: #e9e9e9;
  font-family: "苹方 中等";
   margin-right: 20rpx;
}
.content .price{
   display: block;
  float: left;
  width: 478rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 30rpx;
  color: #ff9b2c;
  font-family: "DIN";
   margin-right: 20rpx;
}