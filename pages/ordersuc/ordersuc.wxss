/* pages/ordersuc/ordersuc.wxss */
.pay_success{
  width: 750rpx;
  height: 390rpx;
  padding-top: 58rpx;
  background: #fff;
  border-bottom: 1rpx solid #e8e8e8;
}
.pay_img{
  margin: 0 auto;
  width: 282rpx;
  height: 254rpx;
}
.pay_success image{
  margin: 0 auto;
  width: 282rpx;
  height: 254rpx;
  display: block;
}
.pay_success image.file{
  width: 147rpx;
  height: 152rpx;
  margin:50rpx auto 0;
}
.pay_success text{
  width: 710rpx;
  padding: 0 20rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
}
.pay_success text.income{
  height: 53rpx;
  line-height: 53rpx;
  font-size: 28rpx;
  color: #f55656;
  font-weight: normal;
  margin-bottom: 21rpx;
}
.songhuo{
  width: 750rpx;
  height: 282rpx;
  padding: 10rpx 0 43rpx;
  border-bottom: 1rpx solid #e8e8e8;
  background: #fff;
}
.songhuo .peisong{
  height: 170rpx;
  width: 710rpx;
  padding: 0 20rpx;
}
.peisong text{
  display: block;
  color: #333;
   width: 710rpx;
}
.peisong text:first-child{
  height: 82rpx;
  line-height: 82rpx;
  font-size: 32rpx;
}
.peisong text:last-child{
  height: 88rpx;
  line-height: 44rpx;
  font-size: 26rpx;
}
.next{
  width: 710rpx;
  height: 72rpx;
  padding: 39rpx 20rpx 0 20rpx;
}
.next text{
  display: block;
  float: left;
  width: 330rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 3rpx;
}
.next text:first-child{
  color: #676767;
  border: 1rpx solid #666;
}
.next text:last-child{
  color: #999;
  float: right;
  border:1rpx solid #ccc;
}