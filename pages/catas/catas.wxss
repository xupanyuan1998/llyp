/* pages/catas/catas.wxss */

page {
  font-family: "苹方";
}

.nav {
  height: 60rpx;
  width: 710rpx;
  padding: 15rpx 20rpx;
  background: #fff;
}
.left {
  width: 632rpx;
  height: 59rpx;
  background: #edeff1;
  float: left;
}

.left image {
  width: 30rpx;
  height: 29rpx;
  margin: 15rpx 10rpx 15rpx 160rpx;
  display: block;
  float: left;
}

.left input {
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #7c7f80;
  display: block;
  float: left;
}

.right {
  float: right;
  width: 70rpx;
  height: 60rpx;
}

.right view {
  margin-top: 9rpx;
  float: right;
  width: 42rpx;
  height: 42rpx;
  position: relative;
}

.right image {
  width: 42rpx;
  height: 42rpx;
}

.right text {
  width: 25rpx;
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  border-radius: 50%;
  background: #ff9b2c;
  color: #fff;
  font-family: "DIN";
  font-size: 20rpx;
  position: absolute;
  top: -7rpx;
  right: -7rpx;
}

.content {
  width: 750rpx;
  height: 1012rpx;
  background: #fff;
  overflow: hidden;
}

.content .c_l {
  height: 1012rpx;
  width: 180rpx;
  float: left;
}

.content .c_l view {
  width: 180rpx;
  height: 100rpx;
  background: #f5f5f5;
  text-align: center;
  line-height: 100rpx;
  color: #333333;
  font-size: 30rpx;
}
.content .c_l view.active{
  background: #fff;
  border-left: 7rpx solid #ff9b2c;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.content .c_r {
  width: 560rpx;
  height: 1012rpx;
  float: right;
  margin-right: 10rpx;
}

.content .c_r .banner {
  width: 560rpx;
  height: 260rpx;
  margin-bottom: 12rpx;
}
.content .c_r .warp{
  width: 560rpx;
  height: auto;
  overflow: hidden;
}
.content .c_r .con {
  width: 160rpx;
  height: 210rpx;
  float: left;
  margin-right: 23rpx;
}
.con image {
  width: 160rpx;
  height: 160rpx; 
}

.con text {
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  width: 160rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
}
